@rendermode InteractiveServer
@code {
    public GlobalHeader()
    {
        ;
    } 

}
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 p-0">
        <div class="container-fluid">

            <NavLink class="navbar-brand" href="/">
                <Icon Name="IconName.House"/>
            </NavLink>


            <AuthorizeView>
                <Authorized>
                <div class="d-flex">
                    <NavLink class="btn btn-primary" href="/manage">
                        <Icon Name="IconName.Shop"/>
                    </NavLink>
                    <Logout />@context.User.Identity?.Name
                </div>
                </Authorized>
                <NotAuthorized>
                    <NavLink class="btn btn-primary" href="/login">
                        <Icon Name="IconName.Person" />
                    </NavLink>
                </NotAuthorized>
            </AuthorizeView>


            <div class="navbar justify-content-between"> @*collapse*@

                <ul class="navbar-nav">
                    <li class="nav-item">
                    </li>
                    <li class="nav-item">
                        <NavLink class="btn btn-primary" href="#">
                            <Icon Name="IconName.Cart"/>
                        </NavLink>
                    </li>
                </ul>

            </div>

        </div>
    </nav>
</header>


