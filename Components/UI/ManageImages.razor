<section class="container my-5">

    @* Header *@
    <div class="col text-center ">
        <h1 class="display-5 fw-bold text-primary">
            <i class="bi bi-images me-3"></i>Bildbibliotek
        </h1>
    </div>

    @* Ladda upp bild *@
    <div class="card shadow-sm border-0 mb-5">
        <div class="card-body p-4 px-5">
            <div class=" mb-3 mb-md-0">
                <label for="@FormImagesId" class="form-label fw-semibold">
                    <i class="bi bi-cloud-upload me-2"></i>Ladda upp ny bild
                </label>
                <InputFile id="@FormImagesId" OnChange="LoadFile" class="form-control form-control-lg"/>
            </div>
        </div>
    </div>

    @* Image Grid *@
    <div class="row g-4">
    @foreach(ShopImage image in Images.OrderByDescending(e=>e.Created))
    {
        string imagename = "/img/" + image.Filename;
        string thumbname = "/img/t/" + image.Filename;

        <div class="col-12 col-md-6 col-lg-4 d-flex justify-content-center">
            <div class="card rounded-4 shadow-sm border image-card" Style="width:19rem;">
                
                @* Image Container *@
                <div class="position-relative overflow-hidden" >
                    <Image Src="@imagename" Alt="@image.AltText" 
                               class="w-100  object-fit-cover rounded-top-4" />
                </div>

            @* Card Body *@
                <div class="card-body text-center p-4 pt-3">
                    <label class="form-label small mb-3">
                        <i class="bi bi-textarea-t me-1"></i>Alternativ text
                    </label>

                    <InputTextArea @bind-Value="@image.AltText" rows="2" class="form-control px-3 py-2 mb-3"/>

                    <div class="d-flex gap-2">
                        <Button class="flex-fill btn-primary fw-semibold" @onclick="((args) => UpdateImageAltText(args, image.Id))">
                            <Icon Name="IconName.Check2" class="me-1"/>
                            Spara
                        </Button>
                        <Button class="flex-fill btn-outline-danger fw-semibold" @onclick="((args) => DeleteImage(args, image.Id))">
                            <Icon Name="IconName.Trash" class="me-1" />
                            Ta Bort
                        </Button>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>


    <!-- Empty State -->
    @if(!Images.Any())
    {
        <div class="text-center py-4 mx-5">
            <div class="mb-4">
                <i class="bi bi-images display-1 text-muted"></i>
            </div>
            <h3 class="text-muted">Inga bilder än</h3>
            <p class="text-muted">Börja med att ladda upp din första bild ovan</p>
        </div>
    }
</section>
